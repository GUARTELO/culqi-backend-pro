{
  "name": "culqi-backend-pro",
  "version": "1.0.21",
  "description": "Backend profesional para procesamiento de pagos con Culqi",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\"",
    "docker:build": "docker build -t culqi-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env culqi-backend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:logs": "pm2 logs culqi-backend",
    "db:migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "culqi",
    "payments",
    "backend",
    "nodejs",
    "api",
    "ecommerce"
  ],
  "author": "Culqi Backend Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "culqi-node": "^2.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.11",
    "pdfkit": "^0.17.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "dotenv": "^16.6.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}